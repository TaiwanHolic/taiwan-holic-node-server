<link rel="stylesheet" href="stylesheets/owl.carousel.min.css">
<link rel="stylesheet" href="stylesheets/owl.theme.default.min.css">
<link rel="stylesheet" href="stylesheets/index.css">
{{!--cover--}}
<div class="bgded" style="background-image:url('images/index_cover.png'); width: 100%; height: 600px;">
    <footer class="center" style="padding-top: 530px;">
        <a href="signup" class="signup">SIGN UP FOR FREE</a>
    </footer>
</div>
{{!--cover end--}} {{!--Itinerary--}}
<div id="itineraries" class="wrapper row3">
    <section class="hoc clear container">
        <p class="indextitle center btmspace-50">Things to do</p>
        <div class="owl-carousel owl-theme">
            {{#each itineraries}}
            <div class="item">
                <a href="#">
                    <img src="{{this.photo_url}}" alt="test" />
                    <div class="hint">{{this.name}}</div>
                </a>
            </div>
            {{/each}}
        </div>
        <div class="center">
            <a href="#" class="signup">MORE THINGS TO DO</a>
        </div>
    </section>
</div>
{{!--End Itinerary--}} 
{{!--Comment--}}
<div id="comments" class="wrapper row3">
    <section class="hoc clear container">
        <p class="indextitle center btmspace-50">Look what they said</p>

        <div class="flex-justify">
            {{#each comments}}
            <div class="comment">
                <a href="#">
                    <img src="{{this.images.[0]}}" alt="comment" />
                </a>
                <div class="title">{{this.comment_title}}</div>
                <div class="content">{{this.comment_content}}</div>
                <div class="footer">
                    {{#if this.comment_username}}
                    <img src="images/user/user_photo/{{this.comment_username}}.jpg" alt="{{this.comment_username}}" /> {{else}}
                    <img src="images/user/user_photo/manager.jpg" alt="{{this.comment_username}}" /> {{/if}}
                    <div> From
                        <div class="username">{{this.comment_username}}</div>
                        <span class="stars">
                        {{#each this.stars}}
                            <i class="fa fa-star"></i>
                        {{/each}}
                        </span>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="center">
            <a href="/city" class="signup">EXPLORE TAIWAN</a>
        </div>
    </section>
</div>
{{!--End Comment--}} {{!--Community--}}
<div id="communities">
    <div style="background-color: rgba(19, 61, 123, 0.5);">
        <section class="hoc clear container">
            <p class="indextitle center btmspace-50" style="color: #FFF;">Need someone's help?</p>
            <p class="center btmspace-50" id="slogan">Solve any problem traveling in Taiwan.</p>
            <div class="flex-justify">
                {{#each questions}}
                <div class="question">
                    <p class="title">{{this.title}}</p>
                    <p class="content">{{this.content}}</p>
                    <div class="footer">
                        <img src="images/user/user_photo/{{this.username}}.jpg" />
                        <div> From </div>
                        <div class="username">{{this.username}}</div>
                        <div class="datetime">{{this.datetime}}</div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="content center">
                <a href="Community" class="signup">GO ASK QUESTION</a>
            </div>
        </section>
    </div>
</div>
{{!--End Community--}}
<script src="javascripts/jquery.min.js"></script>
<script src="javascripts/owl.carousel.min.js"></script>
<script>
    // reference: https://owlcarousel2.github.io/OwlCarousel2/index.html
    $('.owl-carousel').owlCarousel({
        autoplay:true,
        autoplayTimeout: 3000,
        stopOnHover: true,
        loop: true,
        items: 4,
        margin: 20,
    })

</script>